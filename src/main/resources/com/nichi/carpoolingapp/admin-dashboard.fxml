<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox spacing="0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nichi.carpoolingapp.controller.AdminDashboardController" stylesheets="@style.css">
    
    <HBox styleClass="header-box" alignment="CENTER_LEFT" spacing="20">
        <Label text="Admin Dashboard" styleClass="header-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#logout" styleClass="button, button-logout"/>
    </HBox>

    <VBox spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">
        <Label text="Pending Driver Verifications" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <TableView fx:id="pendingTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colLicense" text="License Path" prefWidth="200"/>
                <TableColumn fx:id="colCar" text="Car Photo Path" prefWidth="200"/>
                <TableColumn fx:id="colAction" text="Action" prefWidth="150"/>
            </columns>
        </TableView>
        
        <Button text="Refresh List" onAction="#refreshList" styleClass="button-secondary"/>
    </VBox>
</VBox>
